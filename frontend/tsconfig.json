{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "es6",
		"target": "ES6",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["components/*"],
			"@pages/*": ["components/pages/*"]
		}
	},
	"include": ["src/*", "src/**/*", "custom.d.ts"]
}
